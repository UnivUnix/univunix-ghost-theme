<nav class="pure-g pagination_unvx" role="navigation">
  <div class="pure-u-1-3 newer-posts">
    {{#if prev}}
      <a class="pure-button" href="{{page_url prev}}">&larr; {{t "Recent posts"}}</a>
    {{/if}}
  </div>
  <div class="pure-u-1-3 page-position">
    <span class="page-number">Page {{page}} of {{pages}}</span>
  </div>
  <div class="pure-u-1-3 older-posts">
    {{#if next}}
      <a class="pure-button" href="{{page_url next}}">{{t "Older posts"}} &rarr;</a>
    {{/if}}
  </div>
</nav>