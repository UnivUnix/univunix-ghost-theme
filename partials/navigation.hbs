<ul class="pure-menu-list">
    {{#foreach navigation}}
    <li class="pure-menu-item unvx-category-item nav-{{slug}}{{#if current}} nav-current{{/if}}">
        <a href="{{url absolute="true"}}" class="pure-menu-link">{{label}}</a>
    </li>
    {{/foreach}}
    {{#if @site.twitter}}
        <li class="pure-menu-item social_unvx">
        <a href="{{twitter_url @site.twitter}}" class="pure-menu-link" rel="noopener" target="_blank">
            <i class="fab fa-fw fa-twitter-square" aria-hidden="true"></i>
            <span>Twitter</span>
        </a>
        </li>
    {{/if}}
    {{#if @site.facebook}}
        <li class="pure-menu-item social_unvx">
        <a href="{{facebook_url @site.facebook}}" class="pure-menu-link" target="_blank" rel="noopener">
            <i class="fab fa-fw fa-facebook-square" aria-hidden="true"></i>
            <span>Facebook</span>
        </a>
        </li>
    {{/if}}
</ul>