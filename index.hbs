{{!< default}}
{{> header}}
<main class="main_unvx pure-g" role="main">
  {{#foreach posts}}
    <div class="pure-u-1 pure-u-sm-1-2 pure-u-md-1-4">
      <article class="article_unvx_item" role="article" itemtype="http://schema.org/Article">
        <header>
          <h1 class="title"><a href="{{url}}">{{title}}</a></h1>
        </header>
        <div class="featured-img">
          <a href="{{url}}">
            <img class="b-lazy" src="data:image/png;base64," lazy-src="{{feature_image}}">
          </a>
        </div>
        <footer>
          <span>
            <i class="fa fa-calendar" aria-hidden="true"></i>
            <time datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date format='dddd DD MMM YYYY'}}</time>
          </span>
          <span>
            <i class="fa fa-user" aria-hidden="true"></i>
            {{author}}
          </span>
        </footer>
        {{#if tags}}
          <div class="arttags_unvx">
            Tags: {{tags separator=" | "}}
          </div>
        {{/if}}
      </article>
    </div>
  {{/foreach}}
</main>
{{> footer}}