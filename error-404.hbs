{{!--
This error template is used for all 404 errors, which might occur on your site.
It's a good idea to keep this template as minimal as possible in terms of both file size and complexity.
--}}

<!DOCTYPE html>
<html>
  <head>
    {{! Document Settings }}
    <meta http-equiv="Content-Type" content="text/html" charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    
    {{! Page Meta }}
    <title>{{meta_title}}</title>

    {{! Styles }}
    <link rel="stylesheet" type="text/css" href="{{asset "assets/css/font-awesome-min.css"}}">
    <link rel="stylesheet" type="text/css" href="{{asset "assets/css/pure-min.css"}}">
    <link rel="stylesheet" type="text/css" href="{{asset "assets/css/grids-responsive-min.css"}}">
    <link rel="stylesheet" type="text/css" href="{{asset "assets/css/style.css"}}">
 
    {{! Responsive Meta Tags }}
    <meta name="HandheldFriendly" content="True">
    <meta name="MobileOptimized" content="320">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body class="error_unvx">
    <div class="wrapper_unvx">
      <div role="banner" class="header_unvx pure-g">
        <div class="pure-u-1 pure-u-md-1-5">
          <nav class="heading_unvx pure-menu">
            <a href="{{@blog.url}}" class="pure-menu-heading pure-menu-link">
              {{#if @blog.logo}}
                  <img src="{{@blog.logo}}" alt="{{@blog.title}} logo" />
              {{else}}
                  <span class="title_unvx">{{@blog.title}}</span>
              {{/if}}
            </a>
          </nav>
        </div>
      </div>
      <main class="main_unvx pure-g" role="main">
        <div class="pure-u-1">
          <article class="article_unvx" role="page" itemtype="http://schema.org/Page">
            <header>
              <h1 class="title" itemprop="headline">Error 404</h1>
            </header>
            <section class="content">
              {{t "The document that are you trying to open does not exist or it's moved somewhere."}}
              {{t "You can go back to "}}<a href="{{@blog.url}}">{{t "index page."}}</a>
            </section>
            <footer>
            </footer>
          </article>
        </div>
      </main>
    </div>
  </body>
</html>